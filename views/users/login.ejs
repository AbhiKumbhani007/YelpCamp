<% layout('layouts/boilerplate') %>
	<div class="col-6 offset-3">
		<h1>Login</h1>
		<form action="/login" method="POST" class="validate-form" novalidate>
			<div class="mb-3">
				<label class="form-label" for="username">Username </label>
				<input class="form-control" type="text" id="username" name="username" required autocomplete="off">
				<div class="valid-feedback">
					looks good!
				</div>
			</div>
			<div class="mb-3">
				<label class="form-label" for="password">Password</label>
				<input class="form-control" type="text" id="password" name="password" required autocomplete="off">
				<div class="valid-feedback">
					looks good!
				</div>
			</div>
			<button class="btn btn-success">Login</button>
		</form>
	</div>
